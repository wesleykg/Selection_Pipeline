{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Prompt",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/scripts",
            "args": [
                "${input:pickArguments}"
            ]
        }
    ],
    "inputs": [
        {
            "id": "pickArguments",
            "type": "promptString",
            "description": "Enter command-line arguments for the script"
        }
    ]
}